                  </svg>
                  
                    <p>Search</p>
                  

                </div>

            </div>
    </div>
</section>
<style>
    select{
        border: none;
        outline: none;
        background-color: black;
        color: {{section.settings.text_color}};
    }
    select:focus{
        border: none;
        outline: none;
    }
    .welcom-bar-wrapper{
        display: flex;
        justify-content: space-between;
        padding: 0 20px;
        color: {{section.settings.text_color}};
        background:{{section.settings.background_color}};
        
    }
    .welcome-bar-left{
        display: flex;
        align-items: center;
        gap: 30px;
        font-size:14px;
        text-transform: uppercase;
        font-weight: 500;
    }
    .welcome-bar-left *{
        color: {{section.settings.text_color}};
        background:{{section.settings.background_color}};
    }
    .search{
        display: flex;
        gap: 10px;
        align-items: center;

    }
    .welcom-bar-right{
        display: flex;
        align-items: center;
        gap: 30px;
    }
</style>
