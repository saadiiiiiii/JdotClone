<section>
    <div class="welcom-bar-wrapper">
        <div class="welcome-bar-left">
            <p>{{section.settings.welcome-bar-welcom-text}}</p>
            <a href="/login">Sign In</a>
            <p>{{ localization.country | image_url: width: 32 | image_tag }}</p>
            <a href="{{section.settings.URL1}}">{{section.settings.URL1_text}}</a>
            <a href="{{section.settings.URL2}}">{{section.settings.URL2_text}}</a>
            <a href="{{section.settings.URL3}}">{{section.settings.URL3_text}}</a>
            {% comment %} <select name="" id="">
                <option value="">{% for country in localization.available_countries -%}
                    {{ country }}
                  {%- endfor %}</option>
            </select>
             {% endcomment %}
            
        </div>

            <div class="welcom-bar-right">
