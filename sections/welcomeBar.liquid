                    <svg 
                    xmlns="http://www.w3.org/2000/svg" 
                    id="Layer_1" 
                    data-name="Layer 1" 
                    viewBox="0 0 24 24" 
                    style="width: 25px; height: 25px; fill: {{ section.settings.text_color }};">
